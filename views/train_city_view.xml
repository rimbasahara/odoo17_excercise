<odoo>
    <record id="train_city_form_view" model="ir.ui.view">
        <field name="name">train.city.form</field>
        <field name="model">train.city</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name"/>
                    <field name="code"/>
                </group>
            </form>
        </field>
    </record>

    <record id="train_city_tree_view" model="ir.ui.view">
        <field name="name">train.city.tree</field>
        <field name="model">train.city</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>
    <record id="train_city_action" model="ir.actions.act_window">
        <field name="name">Train</field>
        <field name="res_model">train.city</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p name="o_view_nocontent_smiling_face">
                Kereta Api...
            </p>
        </field>
    </record>
</odoo>